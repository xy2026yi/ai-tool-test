{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AI-Tools-Manager",
  "version": "1.0.0",
  "identifier": "com.ai-tools.manager",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "AI Tools Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "AI Tools Team",
    "copyright": "Copyright Â© 2025",
    "category": "DeveloperTool",
    "shortDescription": "AI Tools Supplier Management Platform",
    "longDescription": "Cross-platform desktop application for managing AI tool suppliers, MCP server templates, and work modes",
    "icon": [
      "icons/linux/icon-32x32.png",
      "icons/linux/icon-128x128.png",
      "icons/macos/icon_128x128@2x.png",
      "icons/windows/icon-32x32.png",
      "icons/windows/app.ico"
    ],
    "createArtifacts": true,
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": ["zh-CN", "en-US"]
      },
      "nsis": {
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "providerShortName": null,
      "signingIdentity": null
    },
    "deb": {
      "depends": []
    },
    "appimage": {
      "bundleMediaFramework": false
    }
  }
  },
  "plugins": {}
}
