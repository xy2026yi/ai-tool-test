{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AI工具管理平台",
  "version": "1.0.0",
  "identifier": "com.ai-tools.manager",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "AI工具管理平台",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "AI Tools Team",
    "copyright": "Copyright © 2025",
    "category": "DeveloperTool",
    "shortDescription": "AI工具供应商管理平台",
    "longDescription": "管理AI工具供应商、MCP服务器模板和工作模式的跨平台桌面应用",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": ["zh-CN", "en-US"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {}
}